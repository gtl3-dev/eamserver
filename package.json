{
  "name": "eamserver",
  "version": "1.0.0",
  "description": "Express Server",
  "main": "index.ts",
  "scripts": {
    "build": "tsc && tsup",
    "dev": "tsx --watch src/index.ts",
    "prod": "node dist/index.js",
    "lint": "biome lint --fix",
    "format": "biome format --write",
    "test": "vitest run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "cors": "^2.8.5",
    "dotenv": "^5.0.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-status-codes": "2.3.0",
    "path": "^0.12.7",
    "pino": "9.6.0",
    "pino-http": "10.4.0",
    "swagger-ui-express": "5.0.1",
    "typescript": "^5.8.3",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/cors": "2.8.18",
    "@types/dotenv": "^6.1.1",
    "@types/express": "5.0.1",
    "@types/node": "^22.15.17",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "@vitest/coverage-v8": "3.1.3",
    "pino-pretty": "13.0.0",
    "prisma": "^6.7.0",
    "supertest": "7.1.0",
    "tsup": "8.4.0",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.3"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm",
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  }
}
